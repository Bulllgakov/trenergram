# Telegram Bot
BOT_TOKEN=your_bot_token_here
BOT_USERNAME=TrenergramBot

# Database
# For Docker development:
DATABASE_URL=postgresql://trenergram:trenergram123@localhost:5432/trenergram
# For local development without Docker:
# DATABASE_URL=postgresql+asyncpg://trenergram:trenergram123@localhost:5432/trenergram
# For SQLite (simplest option):
# DATABASE_URL=sqlite+aiosqlite:///./trenergram.db

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Environment
ENVIRONMENT=development
DEBUG=True

# Domain
# For local development:
DOMAIN=localhost
WEBAPP_URL=http://localhost:8080
# For production:
# DOMAIN=trenergram.ru
# WEBAPP_URL=https://trenergram.ru

# Admin credentials
SUPER_ADMIN_EMAIL=admin@trenergram.ru
SUPER_ADMIN_PASSWORD=changeme

# Payments (for future)
PAYMENT_PROVIDER_TOKEN=test_payment_token

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2